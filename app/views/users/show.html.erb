<h1>My Account</h1>

<% @orders.reverse.each do |order| %>
  <h4>Your Order on <%= format_time(order.created_at) %></h4>
  <% order.items.each do |item| %>
    <!-- Need to change this to link to the individual item eventually -->
    <p><%= quantity_of_item(item, order) %>
    <%= link_to item.display_name, menu_item_path(item) %>:
    <%= number_to_currency(line_item_price(item, order)) %></p>
  <% end %>
  <p>Total: <%= number_to_currency(order.total_price) %></p>
  <p>Status: <%= order.status %></p>
  <% if order_completed_or_cancelled?(order) %>
    <p><%= "Your order was " + order.status + " on " + format_time(order.updated_at) %></p>
  <% end %>
<% end %>
